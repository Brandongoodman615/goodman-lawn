<br />
<div class="booyah-box col-10 offset-1">
  <br />
  <h1 class="text-center">Please Enter Your Information</h1>
  <br />
  <%= simple_form_for @job do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :email %>
    </div>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
  <br /><br />
</div>




<br />
<div class="booyah-box col-10 offset-1 text-center">
  <% @jobs.each do |job| %>
    <div>
      <h1><%= job.name %></h1>
      <i><%= job.address %></i>
      <p><%= job.email %></p>
      <hr />
    </div>
  <% end %>
</div>